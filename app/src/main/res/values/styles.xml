<resources>


    <style name="CustomActionBarTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarWidgetTheme">@style/MyActionBar.WidgetTheme</item>


    </style>

    <!-- ActionBar styles -->



    
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/color_primary</item>

        <item name="android:titleTextStyle">@style/MyActionBar.TitleText</item>


    </style>
    <style name="MyActionBar.WidgetTheme"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:popupMenuStyle">@android:style/Widget.Holo.Light.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@android:style/Widget.Holo.Light.ListView.DropDown</item>
           </style>




    <style name="MyActionBar.TitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>




</resources>
